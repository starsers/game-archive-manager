<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="game_archive_manager.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:game_archive_manager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Grid Height="200" Width="300">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="usernameTextBox" Width="200" Margin="10" PlaceholderText="Username" />
            <PasswordBox x:Name="passwordBox" Width="200" Margin="10" PlaceholderText="Password" />
            <Button x:Name="loginButton" Content="Login" Width="200" Margin="10" Click="loginButton_Click" />
        </StackPanel>
    </Grid>
</Page>
