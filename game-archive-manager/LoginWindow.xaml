<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="game_archive_manager.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Login">
    <Grid Height="200" Width="300">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="usernameTextBox" Width="200" Margin="10" PlaceholderText="Username" />
            <PasswordBox x:Name="passwordBox" Width="200" Margin="10" PlaceholderText="Password" />
            <Button x:Name="loginButton" Content="Login" Width="200" Margin="10" Click="loginButton_Click" />
        </StackPanel>
    </Grid>
</Window>